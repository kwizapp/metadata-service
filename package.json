{
  "name": "metadata-service",
  "version": "0.0.1",
  "description": "Movie metadata microservice for usage by Kwiz",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwizapp/metadata-service.git"
  },
  "maintainers": [
    "Alex Scheitlin <alex.scheitlin@uzh.ch>",
    "Roland Schlaefli <rolandschlaefli@gmail.com>",
    "Nik Zaugg <nik.zaugg@uzh.ch>"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "dev": "micro-dev src/index.js",
    "start": "micro src/index.js",
    "test": "jest",
    "test:handles": "jest --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@kwizapp/kwiz-utils": "0.0.2",
    "dotenv": "8.2.0",
    "micro": "9.3.4",
    "pg": "7.18.2"
  },
  "devDependencies": {
    "jest": "25.1.0",
    "micro-dev": "3.0.0",
    "prettier": "2.0.1",
    "supertest": "5.0.0-0"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.js$",
    "moduleFileExtensions": [
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.js"
    ]
  }
}
